{
  "extends": ["next/core-web-vitals", "prettier"],
  "rules": {
    "no-console": "warn",
    "no-unused-vars": "warn",
    "quotes": ["error", "double"],
    "indent": ["error", 2],
    "max-len": ["error", { "code": 140 }],
    "comma-dangle": ["error", "always-multiline"],
    "semi": ["warn", "always"],

    // імпорти
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index"
        ],
        "newlines-between": "always-and-inside-groups"
      }
    ]
  }
}
